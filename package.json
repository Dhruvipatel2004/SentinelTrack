{
  "name": "sentinel-track",
  "version": "1.0.0",
  "description": "A desktop Time Tracker application that monitors user activity levels.",
  "main": "out/main/index.js",
  "author": "Antigravity",
  "license": "MIT",
  "type": "module",
  "homepage": "https://github.com/YOUR_USERNAME/TimeTracker",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/TimeTracker.git"
  },
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "typecheck": "tsc --noEmit",
    "build:win": "npm run build && electron-builder --win --x64",
    "build:all": "npm run build && electron-builder -mwl",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "publish": "npm run build && electron-builder --win --publish always"
  },
  "dependencies": {
    "@clerk/clerk-react": "^4.32.5",
    "@google/generative-ai": "^0.24.1",
    "@supabase/supabase-js": "^2.39.0",
    "date-fns": "^3.0.0",
    "electron-updater": "^6.1.7",
    "lowdb": "^7.0.0",
    "lucide-react": "^0.300.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uiohook-napi": "^1.5.4"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "@types/node": "^18.19.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "electron": "^28.1.0",
    "electron-builder": "^26.7.0",
    "electron-vite": "^2.0.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10"
  },
  "build": {
    "appId": "com.timetracker.sentinel",
    "productName": "TimeTracker",
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    },
    "files": [
      "out/**/*",
      "resources/**/*",
      "!**/*.map"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "resources/icon.png",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "publisherName": "TimeTracker Team"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "TimeTracker",
      "installerIcon": "resources/icon.png",
      "uninstallerIcon": "resources/icon.png",
      "installerHeader": "resources/icon.png",
      "installerHeaderIcon": "resources/icon.png"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "YOUR_USERNAME",
      "repo": "TimeTracker",
      "releaseType": "release"
    }
  }
}
